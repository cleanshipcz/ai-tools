{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/cleanshipcz/ai-tools/schemas/feature.schema.json",
  "title": "Feature Manifest",
  "description": "Schema for feature-specific context and snippets",
  "type": "object",
  "required": ["id", "version", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "Unique kebab-case identifier for the feature"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (semver) of the feature"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable feature name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief description of the feature"
    },
    "context": {
      "type": "object",
      "properties": {
        "overview": {
          "type": "string",
          "description": "Feature overview and purpose"
        },
        "architecture": {
          "type": "string",
          "description": "Architecture and design notes"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Feature dependencies (other features, libraries)"
        }
      },
      "description": "Contextual information about the feature"
    },
    "files": {
      "type": "object",
      "properties": {
        "entry_points": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Main entry point files for this feature"
        },
        "key_files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Important files related to this feature"
        },
        "patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "File path patterns (globs) to include"
        }
      },
      "description": "Files related to this feature"
    },
    "snippets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "content"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
            "description": "Snippet identifier"
          },
          "title": {
            "type": "string",
            "description": "Snippet title"
          },
          "description": {
            "type": "string",
            "description": "Snippet description"
          },
          "content": {
            "type": "string",
            "description": "Snippet content"
          },
          "language": {
            "type": "string",
            "description": "Programming language for syntax highlighting"
          }
        }
      },
      "description": "Code snippets and examples for this feature"
    },
    "conventions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Feature-specific conventions and patterns"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["draft", "active", "deprecated", "archived"],
          "description": "Feature status"
        },
        "owner": {
          "type": "string",
          "description": "Feature owner or team"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Creation date"
        },
        "updated": {
          "type": "string",
          "format": "date",
          "description": "Last update date"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorization"
        }
      },
      "description": "Feature metadata"
    }
  }
}
