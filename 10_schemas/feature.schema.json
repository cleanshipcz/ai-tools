{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/cleanshipcz/ai-tools/schemas/feature.schema.json",
  "title": "Feature Manifest",
  "description": "Schema for feature-specific context and snippets",
  "type": "object",
  "required": ["id", "version", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "Unique kebab-case identifier for the feature"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (semver) of the feature"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable feature name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief description of the feature"
    },
    "context": {
      "type": "object",
      "properties": {
        "overview": {
          "type": "string",
          "description": "Feature overview and purpose"
        },
        "architecture": {
          "type": "string",
          "description": "Architecture and design notes"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Feature dependencies (other features, libraries)"
        }
      },
      "description": "Contextual information about the feature"
    },
    "files": {
      "type": "object",
      "properties": {
        "patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "File path patterns (globs) to include"
        }
      },
      "description": "Files related to this feature"
    },
    "conventions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Feature-specific conventions and patterns"
    },
    "model": {
      "type": "string",
      "enum": [
        "claude-sonnet-4.5",
        "claude-sonnet-4",
        "claude-haiku-4.5",
        "gpt-5",
        "gpt-5.1",
        "gpt-5.1-codex-mini",
        "gpt-5.1-codex"
      ],
      "description": "Default model for this feature (highest priority, overrides project, agent, and prompt defaults)"
    },
    "recipe": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
          "description": "Recipe ID to bind to this feature"
        },
        "context": {
          "type": "object",
          "description": "Feature-specific context to pass to the recipe as variables",
          "properties": {
            "feature_description": {
              "type": "string",
              "description": "Detailed feature description for the recipe"
            },
            "acceptance_criteria": {
              "type": "string",
              "description": "Acceptance criteria for the feature"
            },
            "bug_description": {
              "type": "string",
              "description": "Bug description (for bug-fix workflow)"
            },
            "reproduction_steps": {
              "type": "string",
              "description": "Bug reproduction steps (for bug-fix workflow)"
            }
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["claude-code", "copilot-cli", "cursor", "github-copilot", "windsurf"]
          },
          "description": "Tools to generate feature-bound recipe scripts for"
        }
      },
      "required": ["id"],
      "description": "Recipe binding configuration for automated workflows"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["draft", "active", "deprecated", "archived"],
          "description": "Feature status"
        },
        "owner": {
          "type": "string",
          "description": "Feature owner or team"
        },
        "created": {
          "oneOf": [
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "object"
            }
          ],
          "description": "Creation date"
        },
        "updated": {
          "oneOf": [
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "object"
            }
          ],
          "description": "Last update date"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorization"
        }
      },
      "description": "Feature metadata"
    }
  },
  "additionalProperties": false
}
