{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/cleanshipcz/ai-tools/schemas/skill.schema.json",
  "title": "Skill Manifest",
  "description": "Schema for Claude Code skills (tool-agnostic source)",
  "type": "object",
  "required": ["id", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "Unique kebab-case identifier for the skill"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (semver) of the skill"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Clear description of what the skill does"
    },
    "command": {
      "type": "object",
      "properties": {
        "program": {
          "type": "string",
          "description": "The program/executable to run"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Command-line arguments"
        },
        "cwd": {
          "type": "string",
          "description": "Working directory (relative or absolute)"
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Environment variables"
        }
      },
      "description": "Command execution configuration"
    },
    "mcp_tool": {
      "type": "string",
      "description": "Reference to an MCP tool ID"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Constraints or preconditions for running this skill"
    },
    "timeout_sec": {
      "type": "integer",
      "minimum": 1,
      "description": "Timeout in seconds"
    },
    "retry": {
      "type": "object",
      "properties": {
        "max_attempts": {
          "type": "integer",
          "minimum": 1
        },
        "backoff_ms": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Retry configuration"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "file", "directory"]
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "description": "Input parameters for this skill"
    },
    "outputs": {
      "type": "object",
      "properties": {
        "stdout": {
          "type": "boolean"
        },
        "stderr": {
          "type": "boolean"
        },
        "exit_code": {
          "type": "boolean"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "description": "Output capture configuration"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
